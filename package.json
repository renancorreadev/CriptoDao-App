{
  "name": "next-web3-boilerplate",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prepare": "husky install",
    "commit": "git-cz",
    "compile-contract-types": "typechain --target ethers-v5 --out-dir './src/contracts/types' './src/contracts/*.json'",
    "postinstall": "yarn compile-contract-types",
    "release": "standard-version"
  },
  "dependencies": {
    "@ethersproject/bignumber": "^5.5.0",
    "@ethersproject/contracts": "^5.5.0",
    "@ethersproject/providers": "^5.5.2",
    "@ethersproject/units": "^5.5.0",
    "@ethersproject/wallet": "^5.5.0",
    "@fontsource/comfortaa": "^4.5.8",
    "@fontsource/press-start-2p": "^4.5.9",
    "@fontsource/roboto": "^4.5.7",
    "@fontsource/rubik-mono-one": "^4.5.9",
    "@metamask/detect-provider": "^1.2.0",
    "@metamask/onboarding": "^1.0.1",
    "@types/sass": "^1.43.1",
    "@web3-react/core": "^6.1.9",
    "@web3-react/injected-connector": "^6.0.7",
    "framer-motion": "^6.3.15",
    "hardhat": "^2.9.2",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.1",
    "next": "12.1.0",
    "prettier": "^2.7.0",
    "pretty-quick": "^3.1.3",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "sass": "^1.50.1",
    "standard-version": "^9.5.0",
    "start-server-and-test": "^1.14.0",
    "styled-components": "^5.3.5",
    "swr": "^1.2.0",
    "typechain": "^7.0.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.0.2",
    "@typechain/ethers-v5": "^9.0.0",
    "@types/node": "^17.0.13",
    "@types/react": "^17.0.38",
    "@types/styled-components": "^5.1.25",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "autoprefixer": "^10.4.7",
    "babel-jest": "^28.1.1",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "dotenv": "^16.0.1",
    "eslint": "8.8.0",
    "eslint-config-next": "12.0.9",
    "eslint-plugin-prettier": "^4.0.0",
    "ethers": "^5.5.3",
    "postcss": "^8.4.14",
    "release": "standard-version",
    "standard-version": "^9.5.0",
    "tailwindcss": "^3.1.4",
    "typechain": "^7.0.0",
    "typescript": "^4.5.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "yarn test:ci"
    }
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
